<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
>


    <Space android:layout_width="wrap_content" android:layout_height="0dp"
           android:layout_weight="1"/>

    <EditText
            android:id="@+id/option1_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Option 1"
            android:inputType="text"/>

    <Space android:layout_width="wrap_content" android:layout_height="0dp"
           android:layout_weight="1"/>


    <EditText
            android:id="@+id/option2_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Option 2"
            android:inputType="text"
    />

    <Space android:layout_width="wrap_content" android:layout_height="0dp"
           android:layout_weight="1"/>

    <EditText
            android:id="@+id/option3_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Option 3"
            android:inputType="text"
    />

    <Space android:layout_width="wrap_content" android:layout_height="0dp"
           android:layout_weight="1"/>


    <EditText
            android:id="@+id/option4_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Option 4"
            android:inputType="text"
    />

    <Space android:layout_width="wrap_content" android:layout_height="0dp"
    android:layout_weight="1"/>

    <EditText
            android:id="@+id/option5_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Option 5"
            android:inputType="text"
    />

    <Space android:layout_width="wrap_content" android:layout_height="0dp"
           android:layout_weight="1"/>


    <Button
            android:id="@+id/save_choices_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/done"
            android:layout_margin="32dp"
    />
</LinearLayout>